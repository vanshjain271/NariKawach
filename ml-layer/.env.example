# ==============================================================================
# SHIELD AI ML Service - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
DEBUG=true

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-change-in-production

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# External APIs (optional)
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# ML Model
MODEL_CACHE_DIR=./models/cache
MODEL_TYPE=gradient_boosting

# Feature Flags
ENABLE_STALKING_DETECTION=true
ENABLE_ROUTE_ANOMALY=true
ENABLE_EMERGENCY_PROTOCOL=true
ENABLE_ML_PREDICTIONS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_RPM=60

# Logging
LOG_LEVEL=INFO

# Stalking Detection
STALKING_WINDOW_MINUTES=30
STALKING_MIN_COUNT=3
STALKING_PROXIMITY_METERS=100
STALKING_CONFIDENCE=0.7
